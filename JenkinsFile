pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')
    }

    stages {

        stage('Build') {
            steps {
                sh 'make'
                echo 'This is building...'
            }
        }

        stage('Test') {
            steps {  
                script {
                    def browsers = ['chrome', 'safari']
                    for (int i = 0; i < browsers.size(); ++i) {
                    echo "Testing the ${browsers[i]} browser."
                         }
                sh 'sum'
            }
        }

        stage('Deploy') {
            steps {
                echo JOB_NAME
                junit '**/target/*.xml'
            }
        }
    }
}